---
const steps = [
  {
    number: '01',
    title: 'Tell Your Story',
    description:
      'Share the details, memories, and emotions you want captured in your song.',
    icon: 'edit'
  },
  {
    number: '02',
    title: 'Choose Your Style',
    description:
      'Pick your genre, tempo, and vibe from 50+ styles including country, reggae, pop, rock, and more.',
    icon: 'sliders'
  },
  {
    number: '03',
    title: 'We Create',
    description:
      'Our AI-powered production crafts your unique song with professional quality. Average turnaround: 48-72 hours.',
    icon: 'sparkles'
  },
  {
    number: '04',
    title: 'You Celebrate',
    description:
      'Receive your finished song via email. Play it at your event, share on social, or keep it forever.',
    icon: 'gift'
  }
];
---

<section id="how-it-works" class="relative overflow-hidden py-20">
  <div class="absolute inset-0 -z-10 bg-[linear-gradient(to_bottom,#fff_0%,#fff_25%,#f8f1e4_25%,#f8f1e4_50%,#fff_50%,#fff_75%,#f8f1e4_75%,#f8f1e4_100%)]"></div>

  <div class="mx-auto max-w-7xl px-6 lg:px-10">
    <div class="mx-auto mb-14 max-w-3xl text-center">
      <p class="text-sm font-semibold uppercase tracking-[0.2em] text-amber-700">How It Works</p>
      <h2 class="mt-3 text-3xl text-[#2d1810] sm:text-4xl">From your idea to your inbox in 4 simple steps</h2>
    </div>

    <div class="grid gap-10 md:grid-cols-4 md:gap-8">
      {steps.map((step, index) => (
        <article class="group relative rounded-3xl border border-[#e9dcc7] bg-white/90 p-6 shadow-[0_10px_25px_rgba(45,24,16,0.08)] backdrop-blur-sm">
          {index < steps.length - 1 && (
            <>
              <span class="absolute -bottom-7 left-1/2 h-7 w-px -translate-x-1/2 bg-[#d4af37] md:hidden"></span>
              <span class="absolute -bottom-8 left-1/2 -translate-x-1/2 text-[#d4af37] md:hidden">↓</span>
              <span class="absolute left-full top-1/2 hidden h-px w-8 -translate-y-1/2 bg-[#d4af37] md:block"></span>
              <span class="absolute left-[calc(100%+1.75rem)] top-1/2 hidden -translate-y-1/2 text-[#d4af37] md:block">→</span>
            </>
          )}

          <p class="text-5xl font-bold tracking-tight text-[#d4af37]">{step.number}</p>

          <div class="mt-5 inline-flex h-14 w-14 items-center justify-center rounded-2xl bg-[#f8f1e4] text-[#7a5b20]">
            {step.icon === 'edit' && (
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" class="h-7 w-7">
                <path d="M12 20h9" />
                <path d="M16.5 3.5a2.1 2.1 0 0 1 3 3L7 19l-4 1 1-4Z" />
              </svg>
            )}
            {step.icon === 'sliders' && (
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" class="h-7 w-7">
                <line x1="4" x2="4" y1="21" y2="14" />
                <line x1="4" x2="4" y1="10" y2="3" />
                <line x1="12" x2="12" y1="21" y2="12" />
                <line x1="12" x2="12" y1="8" y2="3" />
                <line x1="20" x2="20" y1="21" y2="16" />
                <line x1="20" x2="20" y1="12" y2="3" />
                <line x1="2" x2="6" y1="14" y2="14" />
                <line x1="10" x2="14" y1="8" y2="8" />
                <line x1="18" x2="22" y1="16" y2="16" />
              </svg>
            )}
            {step.icon === 'sparkles' && (
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" class="h-7 w-7">
                <path d="M9.9 3.3 11.5 7l3.7 1.6-3.7 1.5-1.6 3.7-1.5-3.7L4.7 8.6 8.4 7Z" />
                <path d="M18.2 11.5 19 13l1.5.8-1.5.7-.8 1.5-.7-1.5-1.5-.7L17.5 13Z" />
                <path d="M15 18.3 16 20l1.7 1-1.7.8-1 1.7-.8-1.7-1.7-.8 1.7-1Z" />
              </svg>
            )}
            {step.icon === 'gift' && (
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" class="h-7 w-7">
                <rect x="3" y="8" width="18" height="4" rx="1" />
                <path d="M12 8v13" />
                <path d="M19 12v8a1 1 0 0 1-1 1H6a1 1 0 0 1-1-1v-8" />
                <path d="M7.5 8a2.5 2.5 0 1 1 0-5c2 0 4.5 5 4.5 5" />
                <path d="M16.5 8a2.5 2.5 0 1 0 0-5c-2 0-4.5 5-4.5 5" />
              </svg>
            )}
          </div>

          <h3 class="mt-5 text-xl font-bold text-[#2d1810]">{step.title}</h3>
          <p class="mt-3 text-sm leading-relaxed text-[#5f5142]">{step.description}</p>
        </article>
      ))}
    </div>
  </div>
</section>
